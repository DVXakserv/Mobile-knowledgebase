<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_bg"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/tv_search_faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/actor"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_search_faq_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_search_faq_title"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/actor"
        android:gravity="center_vertical"
        android:text="Lorem ipsum dolor sit amet, consecteur adipiscing elit. Fusce erat tortor, lacinia fringilla..." />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tv_search_faq_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_search_faq_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/saved"/>
        <ImageView
            android:id="@+id/img_search_faq_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fire_arrow_right"
            android:tint="@color/login_bg"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>