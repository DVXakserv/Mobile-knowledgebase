<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_assistance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_assistance"
        android:layout_marginTop="20dp"
        android:layout_width="11.3dp"
        android:layout_height="11dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_assistance"/>

    <TextView
        android:id="@+id/tv_assistance"
        android:layout_below="@id/img_assistance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_margin_5"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_bg"
        android:textSize="11sp"
        android:text="ASSISTANCE"/>

</RelativeLayout>