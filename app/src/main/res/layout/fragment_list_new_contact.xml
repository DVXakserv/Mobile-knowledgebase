<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/contact_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_margin_30"
            android:background="@drawable/roundbg_directory"/>
    </FrameLayout>
        <LinearLayout
            android:id="@+id/ly_new_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28.3dp"
            android:layout_marginRight="21.3dp"
            android:layout_marginLeft="21.3dp"
            android:visibility="visible"
            android:orientation="vertical">
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#797979"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Name"
                android:layout_marginTop="17.8dp"
                android:textSize="10.8sp"
                android:textColorHint="#797979"
                android:layout_below="@id/tv_name"/>
            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:labelFor="@id/et_name"
                android:layout_marginTop="19.3dp"
                android:background="#797979"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:background="@null"
                android:layout_marginTop="17.8dp"
                android:textSize="10.8sp"
                android:textColorHint="#797979"
                android:layout_below="@id/et_name"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.3dp"
                android:background="#797979"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Email"
                android:layout_marginTop="17.8dp"
                android:textSize="10.8sp"
                android:textColorHint="#797979"
                android:layout_below="@id/et_phone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.3dp"
                android:background="#797979"/>
            <EditText
                android:id="@+id/et_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Website"
                android:layout_marginTop="17.8dp"
                android:textSize="10.8sp"
                android:textColorHint="#797979"
                android:layout_below="@id/et_email"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.3dp"
                android:background="#797979"/>
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Address"
                android:layout_marginTop="17.8dp"
                android:textSize="10.8sp"
                android:textColorHint="#797979"
                android:layout_below="@id/et_website"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.3dp"
                android:background="#797979"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_savecontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/radius_tv_blue"
            android:layout_below="@id/ly_new_contact"
            android:layout_marginTop="23.5dp"
            android:paddingTop="13dp"
            android:paddingBottom="12.5dp"
            android:paddingLeft="13.3dp"
            android:paddingRight="13dp"
            android:fontFamily="@font/roboto"
            android:textSize="11sp"
            android:text="@string/save_contact"
            android:textColor="@color/light_nav"/>


</RelativeLayout>
