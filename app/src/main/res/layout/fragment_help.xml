<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HelpFragment"
    android:background="@android:color/white"
    android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_margin_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:paddingBottom="@dimen/padding_margin_14">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_14"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:paddingTop="13.8dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="13.3dp"
                    android:background="@drawable/help_item_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_help_1_1"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/number_1"
                        android:foregroundTint="@color/login_bg"/>

                    <TextView
                        android:id="@+id/tv_help_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/help_1"
                        android:textColor="#797979"
                        android:textSize="@dimen/padding_margin_14" />
                    <ImageView
                        android:id="@+id/img_help_1_2"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/fire_arrow_right"
                        android:foregroundTint="@color/login_bg"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_14"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:paddingTop="13.8dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="13.3dp"
                    android:background="@drawable/help_item_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_help_2_1"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/number_2"
                        android:foregroundTint="@color/login_bg"/>
                    <TextView
                        android:id="@+id/tv_help_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/help_1"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#797979"
                        android:textSize="@dimen/padding_margin_14" />
                    <ImageView
                        android:id="@+id/img_help_2_2"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/fire_arrow_right"
                        android:foregroundTint="@color/login_bg"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_14"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginRight="13.3dp"
                    android:paddingTop="13.8dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/help_item_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_help_3_1"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_margin_12"
                        android:src="@drawable/number_3"
                        android:foregroundTint="@color/login_bg"/>
                    <TextView
                        android:id="@+id/tv_help_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/help_1"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#797979"
                        android:textSize="@dimen/padding_margin_14" />
                    <ImageView
                        android:id="@+id/img_help_3_2"
                        android:layout_width="21.8dp"
                        android:layout_height="21.8dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/fire_arrow_right"
                        android:layout_marginRight="13.3dp"
                        android:foregroundTint="@color/login_bg"/>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_help_content_3"
                        android:layout_width="match_parent"
                        app:riv_corner_radius="@dimen/padding_margin_10"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="170dp"
                        android:layout_below="@id/img_help_3_2"
                        android:src="@drawable/migrate"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_help_content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.3dp"
                        android:layout_marginTop="16.5dp"
                        android:layout_below="@id/img_help_content_3"
                        android:text="@string/lorem_ipsum"
                        android:textSize="10.8sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#797979"
                        android:layout_marginRight="13.3dp"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>