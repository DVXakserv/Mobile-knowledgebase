<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_bg"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="13.5dp"
            android:layout_centerInParent="true"
            android:paddingBottom="12.5dp"
            android:backgroundTint="#1baec3">


            <TextView
                android:id="@+id/tv_add_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:maxLength="15"
                android:ellipsize="end"
                android:textSize="10.8sp"
                android:text="Caritas"/>

            <TextView
                android:id="@+id/tv_add_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_add_one"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:maxLength="15"
                android:text="aaaaaaaaaaa"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="10.8sp"/>

            <View
                android:id="@+id/tv_search_directory_underline"
                android:layout_width="wrap_content"
                android:layout_height="0.2dp"
                android:layout_alignStart="@id/rl_contact_item"
                android:layout_alignEnd="@id/rl_contact_item"
                android:layout_marginTop="@dimen/padding_margin_8"
                android:layout_below="@id/tv_add_two"
                android:background="@color/white"
                android:fontFamily="@font/actor"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:id="@+id/rl_contact_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.3dp"
                android:layout_below="@id/tv_search_directory_underline"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_search_directory_call"
                    android:layout_width="21.8dp"
                    android:layout_height="21.8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_call"
                    android:tint="@color/white"/>
                <ImageView
                    android:id="@+id/img_search_directory_location"
                    android:layout_width="21.8dp"
                    android:layout_height="21.8dp"
                    android:layout_toRightOf="@id/img_search_directory_call"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_location"
                    android:layout_marginLeft="7.5dp"
                    android:tint="@color/white"/>
                <ImageView
                    android:id="@+id/img_search_directory_saved"
                    android:layout_width="21.8dp"
                    android:layout_height="21.8dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_toRightOf="@id/img_search_directory_location"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_saved"
                    android:tint="@color/white"/>


            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
