<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_one_tab"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_tab"
            android:layout_width="43.5dp"
            android:layout_height="43.5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/medicine"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_below="@id/img_tab"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_5"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:text="LEGAL"/>

    </RelativeLayout>
</RelativeLayout>