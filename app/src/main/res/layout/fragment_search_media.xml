<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_marginTop="18.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOWING 0 RESULTS FOR "
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textColor="#ffffff"
            android:layout_marginLeft="21.3dp"/>
        <TextView
            android:id="@+id/tv_cari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="CARITAS"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#ffffff"
            android:layout_toEndOf="@id/tv_1"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@id/tv_1"/>
        <LinearLayout
            android:id="@+id/ly_search_direcotry_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_cari"
            android:background="@drawable/bg_radius_line"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10.3dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="9.8dp"
                android:layout_marginBottom="9.3dp"
                android:layout_marginLeft="9.3dp"
                android:src="@drawable/down_arrow"
                android:tint="@android:color/white"/>

            <TextView
                android:id="@+id/tv_search_directory_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_5"
                android:text="@string/spinner_country"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
                android:fontFamily="@font/roboto"
                android:textSize="9sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/padding_margin_25"
            android:layout_height="@dimen/padding_margin_25"
            android:layout_toRightOf="@id/ly_search_direcotry_country"
            android:src="@drawable/ic_search_round"
            android:layout_centerVertical="true"
            android:layout_marginRight="21.5dp"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:tint="@color/white"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_search_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_margin_30"
            android:background="@drawable/roundbg_shadow"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_media"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:scrollbarSize="0dp"
        android:layout_marginTop="14.8dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:layout_marginBottom="@dimen/padding_margin_20"/>
    <FrameLayout
        android:id="@+id/fl_search_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>