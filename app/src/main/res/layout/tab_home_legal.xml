<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/img_legal"
        android:layout_marginTop="20dp"
        android:layout_width="13.3dp"
        android:layout_height="12.5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_legal"/>

    <TextView
        android:id="@+id/tv_legal"
        android:layout_below="@id/img_legal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_5"
        android:layout_height="wrap_content"
        android:textColor="@color/light_nav"
        android:textSize="11sp"
        android:text="LEGAL"/>
</RelativeLayout>