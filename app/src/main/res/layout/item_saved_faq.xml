<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rl_assistance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_bg"
    android:layout_marginBottom="15.3dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13.8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:textColor="#797979"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Am I eligible for a cash grant?"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="@dimen/padding_margin_14"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/padding_margin_14"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="Lorem ipsum dolor sit amet, consecteur adipiscing elit. Fusce erat tortor, lacinia fringilla..."
        android:textSize="10.8sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12.8dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@id/tv_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/one_sysmbol"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/padding_margin_7"
            android:layout_centerVertical="true"
            android:tint="@color/fire_color"
            android:src="@drawable/sub_assistance"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/one_sysmbol"
            android:layout_toRightOf="@id/one_sysmbol"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="4.5dp"
            android:text="Assistance"
            android:textColor="@color/login_bg"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/padding_margin_7"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@id/img_more"
            android:layout_centerVertical="true"
            android:src="@drawable/saved_fire"
            android:tint="@color/login_bg" />


        <ImageView
            android:id="@+id/img_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/padding_margin_7"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fire_arrow_right"
            android:tint="@color/login_bg"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>