<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Submit_questionFragment"
    android:background="@android:color/white"
    android:orientation="vertical">

<!--    <Space-->
<!--        android:layout_width=""-->
<!--        android:layout_height=""-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spin_submit_question_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_20"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_20"
                android:background="@drawable/radius_tv_blue_arrow"
                android:popupBackground="#a1a1a1"
                android:textAlignment="center"
                android:spinnerMode="dialog"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_20"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_20"
                android:background="@drawable/edit_text_bg"
                android:textColorHint="@color/txt_home_gray"
                android:gravity="top"
                android:hint="@string/hint_question"
                android:textColor="@color/white"
                android:paddingTop="@dimen/padding_margin_10"
                android:paddingLeft="@dimen/padding_margin_10"
                android:textSize="13.5sp"
                android:minLines="15"/>

            <TextView
                android:id="@+id/tv_legal_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_margin_30"
                android:layout_marginBottom="@dimen/padding_margin_100"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/padding_margin_30"
                android:paddingRight="@dimen/padding_margin_30"
                android:textColor="@color/light_nav"
                android:background="@drawable/radius_tv_blue"
                android:text="@string/submit"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>